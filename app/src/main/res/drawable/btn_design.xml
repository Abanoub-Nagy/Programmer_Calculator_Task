<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/colorBtn" />
            <solid android:color="@color/colorBtn" />
            <corners android:radius="@dimen/radiusBtn" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/colorBtnWithClick" />
            <solid android:color="@color/colorBtnWithClick" />
            <corners android:radius="@dimen/radiusBtn" />
        </shape>
    </item>
</selector>